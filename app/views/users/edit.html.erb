<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
          <% end %>
        </li>
        </ul>
        <% end %>
          <%= form_with model: @user, local: true do |f| %>
            <label for="inputName">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
            <label for="inputImage">ProfileImage</label><br>
            <%= f.file_field :profile_image, accept: "image/*" %><br>
            <label for="inputIntroduction">Introduction</label><br>
            <%= f.text_area :introduction %><br>
            <%= f.submit "Update User" %>
          <% end %>
    </div>
  </div>
</div>